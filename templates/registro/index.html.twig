    <script>
        $(document).ready(function() {
            // Search functionality
            $('#searchBarrio').on('input', function() {
                const searchTerm = $(this).val().toLowerCase();
                
                if (searchTerm.length === 0) {
                    $('.neighborhood-item').show();
                    $('.delegation-section').show();
                    return;
                }

                $('.neighborhood-item').each(function() {
                    const text = $(this).text().toLowerCase();
                    if (text.includes(searchTerm)) {
                        $(this).show();
                        $(this).closest('.delegation-section').show();
                    } else {
                        $(this).hide();
                    }
                });

                // Hide sections with no visible items
                $('.delegation-section').each(function() {
                    if ($(this).find('.neighborhood-item:visible').length === 0) {
                        $(this).hide();
                    }
                });
            });

            // Click handler for neighborhood items
            $(document).on('click', '.neighborhood-item', function(e) {
                e.preventDefault();
                
                // Get the delegation name from the section title
                const $delegationTitle = $(this).closest('.delegation-section').find('.delegation-title');
                const delegationFull = $delegationTitle.text().trim();
                // Extract just the delegation name (remove 'Delegación: ')
                const delegationName = delegationFull.replace(/^Delegación:\s*/i, '').trim();
                const neighborhood = $(this).text().trim();
                
                console.log('Selected neighborhood:', neighborhood, 'in delegation:', delegationName);
                
                // Find and check the corresponding checkbox
                let found = false;
                $('.delegacion-checkbox').each(function() {
                    const $checkbox = $(this);
                    const checkboxLabel = $checkbox.closest('.form-check').find('label').text().trim();
                    
                    console.log('Checking checkbox with label:', checkboxLabel);
                    
                    // Compare the checkbox label with the delegation name (case insensitive)
                    if (checkboxLabel.toLowerCase() === delegationName.toLowerCase()) {
                        console.log('Match found! Checking:', delegationName);
                        $checkbox.prop('checked', true).trigger('change');
                        found = true;
                        
                        // Close the modal using Bootstrap 5 method
                        const modalElement = document.getElementById('delegacionesModal');
                        const modal = bootstrap.Modal.getInstance(modalElement);
                        if (!modal) {
                            // If no instance exists, create one
                            const bsModal = new bootstrap.Modal(modalElement);
                            bsModal.hide();
                        } else {
                            modal.hide();
                        }
                        
                        // Scroll to the checked item
                        $('html, body').animate({
                            scrollTop: $checkbox.closest('.form-check').offset().top - 50
                        }, 300);
                        
                        return false; // Exit the loop
                    }
                });
                
                if (!found) {
                    console.error('No se encontró la casilla de verificación para la delegación:', delegationName);
                    alert('No se pudo encontrar la delegación correspondiente. Por favor, selecciónela manualmente.');
                }
            });
        });
        <!-- Script para seleccionar todas las delegaciones -->
   
        $(document).ready(function() {
            // Seleccionar todas las delegaciones
            $('#select-all-delegaciones').click(function() {
                $('.delegacion-checkbox').prop('checked', true);
            });
            
            // Desmarcar todas las delegaciones
            $('#deselect-all-delegaciones').click(function() {
                $('.delegacion-checkbox').prop('checked', false);
            });
        });
    
    </script>

