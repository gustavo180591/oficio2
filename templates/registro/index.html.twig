    <style>
        .delegation-list {
            max-height: 400px;
            overflow-y: auto;
        }
        .delegation-section {
            margin-bottom: 1.5rem;
        }
        .delegation-title {
            font-weight: bold;
            margin: 1rem 0 0.5rem 0;
            color: #0d6efd;
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 0.25rem;
        }
        .neighborhood-item {
            padding: 0.25rem 0.5rem;
            cursor: pointer;
        }
        .neighborhood-item:hover {
            background-color: #f8f9fa;
        }
        
        /* Modal size and positioning */
        .modal-dialog {
            max-width: 95%;
            margin: 1rem auto;
        }
        
        .modal-content {
            border-radius: 10px;
            border: none;
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
        }
        
        .modal-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            padding: 1.25rem 2rem;
        }
        
        .modal-body {
            padding: 2rem;
            max-height: 70vh;
            overflow-y: auto;
        }
        
        /* Delegation sections */
        .delegation-section {
            margin-bottom: 2.5rem;
            background: #fff;
            border-radius: 8px;
            padding: 1rem;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }
        
        .delegation-title {
            font-weight: 700;
            font-size: 1.1rem;
            color: #2c3e50;
            margin: 0 0 1rem 0;
            padding: 0.75rem 1rem;
            background-color: #f1f5f9;
            border-radius: 6px;
            border-left: 4px solid #3b82f6;
        }
        
        .neighborhood-item {
            padding: 0.75rem 1.25rem;
            margin: 0.5rem 0;
            cursor: pointer;
            border-radius: 6px;
            transition: all 0.2s ease;
            font-size: 1rem;
            color: #4b5563;
            display: block;
            border: 1px solid #e5e7eb;
        }
        
        .neighborhood-item:hover {
            background-color: #f8fafc;
            transform: translateX(5px);
            border-color: #bfdbfe;
            color: #1e40af;
        }
        
        /* Search bar */
        #searchBarrio {
            margin-bottom: 2rem;
            padding: 1rem 1.5rem;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        
        #searchBarrio:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
            outline: none;
        }
        
        /* Responsive adjustments */
        @media (min-width: 992px) {
            .modal-dialog {
                max-width: 900px;
            }
            
            .delegation-columns {
                column-count: 2;
                column-gap: 2rem;
            }
            
            .delegation-section {
                break-inside: avoid;
                margin-bottom: 2rem;
            }
        }
        
        @media (max-width: 768px) {
            .modal-body {
                padding: 1.5rem;
            }
            
