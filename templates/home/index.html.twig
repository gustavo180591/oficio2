{% extends 'base.html.twig' %}

{% block title %}REGISTRO DE OFICIOS{% endblock %}

{% block body %}
<style>
    .btn-register {
        background-color: #f97316;
        color: white;
        border-color: #ea580c;
        transition: background-color 0.2s;
    }
    .btn-register:hover {
        background-color: #fb923c;
        color: white;
    }
    .btn-search {
        background-color: #3b82f6;
        color: white;
        border-color: #2563eb;
        transition: background-color 0.2s;
    }
    .btn-search:hover {
        background-color: #60a5fa;
        color: white;
    }
</style>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card shadow-sm mb-5">
                <div class="card-body p-3 p-md-5">
                    <div class="text-center mb-5">
                        <img src="{{ asset('images/logo.png') }}" alt="Logo" class="img-fluid" style="max-width: 85%; max-height: 150px; width: auto;">
                    </div>
                    <h1 class="h2 mb-4 fw-bold" style="color: #f97316;">BIENVENIDO AL REGISTRO DE OFICIOS DE LA CIUDAD DE POSADAS</h1>
                    <p class="lead text-muted mb-5">ENCUENTRA Y CONECTA DE MANERA FÁCIL Y RÁPIDA CON TRABAJADORES DE DIFERENTES OFICIOS</p>
                    
                    <div class="d-flex flex-wrap justify-content-center gap-4 mt-5">
                        <a href="{{ path('app_lista') }}" class="btn btn-search btn-lg px-5 py-3">
                            <i class="fas fa-search me-2"></i> Buscar Oficio
                        </a>
                        <a href="{{ path('app_registro') }}" class="btn btn-register btn-lg px-5 py-3">
                            <i class="fas fa-user-plus me-2"></i> Registrarme
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_reportes') }}" class="btn btn-outline-info btn-lg px-5 py-3">
                            <i class="fas fa-chart-line me-2"></i> Reportes
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-box {
        transition: all 0.3s ease;
    }
    
    .card:hover .icon-box {
        transform: scale(1.1);
    }
    
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .card:hover {
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
    
    @media (max-width: 768px) {
        .display-4 {
            font-size: 2rem;
        }
        
        .lead {
            font-size: 1.1rem;
        }
    }
</style>
{% endblock %}
